!!!
%html{:lang => "en"}

	= Haml::Engine.new(File.read("dev/haml/partials/_doc_head.haml")).render

	%body#page_contact.page_contact

		= Haml::Engine.new(File.read("dev/haml/partials/_html_header.haml")).render

		%main{:role => "main"}

			%section.page_header.contact_header

				-# .wrap_svg.icon
					-# %svg.svg_nm-logo{:viewbox => "0 0 64 64"}
						-# %use{"xlink:href" => "#nm_logo"}

				%h1.visuallyhidden Contact Us
				.wrap_svg.title
					%svg.svg_nm-contact{:viewbox => "0 0 796 70"}
						%use{"xlink:href" => "#nm_contact"}

			%section.page_articles.contact_articles{"data-container" => "width-padding_1440"}

				%article.contact_phone

					%div.clearfix{"data-container" => true}

						.wrap_svg.article_svg
							%svg.svg_ui-phone
								%use{"xlink:href" => "#ui_phone"}

						%h2 Telephone
						%p Get in touch with our customer service team for help buying, updating or understanding your policy.
						%p
							Call toll-free from Canada and the Continental U.S:
							%a{:href => "tel:+1-844-207-7522", :title => "1 (844) 207-7522"} +1 (844) 207-7522
						%p
							While overseas, call collect from anywhere else in the world:
							%a{:href => "tel:+1-613-763-2366", :title => "1 (613) 763-2366"} +1 (613) 763-2366

				%article.contact_emergency

					%div{"data-container" => true}

						.wrap_svg.article_svg
							%svg.svg_ui-exclaim
								%use{"xlink:href" => "#ui_exclaim"}

						%h2 Emergencies
						%p
							Call the emergency assistance team 24 hours a day, 7 days a week if you need urgent medical or travel assistance:
							%a{:href => "tel:+1-604-207-7522", :title => "1 (604) 207-7522"} +1 (604) 207-7522

				%article.contact_social

					%div{"data-container" => true}

						%ul.list_svg
							%li.wrap_svg.article_svg.icon_twitter
								%svg.svg_social-twitter-stroke{:viewbox => "0 0 64 46"}
									%use{"xlink:href" => "#social_twitter-stroke"}
							%li.wrap_svg.article_svg.icon_facebook
								%svg.svg_social-facebook-stroke{:viewbox => "0 0 35 64"}
									%use{"xlink:href" => "#social_facebook-stroke"}

						%h2 Twitter &amp; Facebook
						%ul
							%li
								Twitter: &nbsp;
								%a{:href => "https://twitter.com/northmanco", :title => "Follow us on Twitter"} @northmanco
							%li
								Facebook: &nbsp;
								%a{:href => "https://www.facebook.com/northmanco", :title => "Like us on Facebook"} www.facebook.com/northmanco

		= Haml::Engine.new(File.read("dev/haml/partials/_html_footer.haml")).render