%form#form_required.form_required

	.wrap_input.required_traveller.clearfix

		%label Traveller 1

		.wrap_element.required_birthday
			%input.datepicker{:type => "text", :name => "dob[0]", :value => "", :placeholder => "Birthday", :required => true, :readonly => true, "data-provide" => "datepicker", "data-date-format" => "yyyy-mm-dd", "data-date-autoclose" => "true", "data-date-start-view" => "decade"}
