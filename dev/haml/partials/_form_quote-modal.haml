								%svg.ui_checkmark{:viewBox => "0 0 64 64"}
									%use{"xlink:href" => "#ui_checkmark"}

						%span.wrap_checkbox.checkbox_booked
							%input#check_booked.check_booked.visuallyhidden{:type => "checkbox", :name => "booked", :value => "check_booked", :tabindex => "-1", :checked => true}
							%label{:for => "check_booked"}
								Trip was booked today
								%svg.ui_checkmark{:viewBox => "0 0 64 64"}
									%use{"xlink:href" => "#ui_checkmark"}

					#wrap_dis-booked.wrap_disabler.disabled
