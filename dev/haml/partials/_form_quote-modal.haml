				.column.col-1

					%label When are you going?

					#datepicker.input-daterange.input-group

						.wrap_element
							%input#date_start.date_start{:type => "text", :name => "start", :value => "", :placeholder => "Pick start date", :required => true, :tabindex => "-1", :readonly => true}
							%svg.ui_calendar{:viewBox => "0 0 64 64"}
								%use{"xlink:href" => "#ui_calendar"}

						%span.txt Til

						.wrap_element
							%input#date_end.date_end{:type => "text", :name => "end", :value => "", :placeholder => "Pick end date", :required => true, :tabindex => "-1", :readonly => true}
							%svg.ui_calendar{:viewBox => "0 0 64 64"}
								%use{"xlink:href" => "#ui_calendar"}

					.wrap_checkboxes.clearfix

						%span.wrap_checkbox.checkbox_family
							%input#check_family.check_family.visuallyhidden{:type => "checkbox", :name => "family", :value => "check_family", :tabindex => "-1"}
