							%input#date_booked.date_booked{:type => "text", :name => "date_booked", :value => "", :placeholder => "Pick booked date", :required => true, :tabindex => "-1", :readonly => true}
							%svg.ui_calendar{:viewBox => "0 0 64 64"}
								%use{"xlink:href" => "#ui_calendar"}

