%aside#modal_quote.modal_quote.modal{"data-modal" => "inactive"}

	.modal_body

		%form#form_quote.form_quote.has_dropdown

			-# receives the value from #input_destination
			%input#hidden_destination{:type => "hidden", :name => "destination", :value => "", :tabindex => "-1"}

			-# "Edit Details" if on Quote page
