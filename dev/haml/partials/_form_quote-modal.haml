%aside#modal_quote.modal_quote{"data-modal" => "inactive"}

	.modal_body

		%form#form_quote.form_quote.has_dropdown

			-# receives the value from #input_destination
			%input#hidden_destination{:type => "hidden", :name => "hidden_destination", :value => "", :tabindex => "-1"}

			-# "Edit Details" if on Quote page
			%h5 Get a quote

			.error_message
				%p Please fill out all details.

			.wrap_input.clearfix

				.column.col-1

					%label When are you going?

					#datepicker.input-daterange.input-group

						.wrap_element
							%input#date_start.date_start{:type => "text", :name => "date_start", :value => "", :placeholder => "Pick start date", :required => true, :tabindex => "-1", :readonly => true}
							%svg.svg_ui-calendar
								%use{"xlink:href" => "#ui_calendar"}

						%span.txt Til

						.wrap_element
							%input#date_end.date_end{:type => "text", :name => "date_end", :value => "", :placeholder => "Pick end date", :required => true, :tabindex => "-1", :readonly => true}
							%svg.svg_ui-calendar
								%use{"xlink:href" => "#ui_calendar"}

					%span.wrap_checkbox
						%input#check_family.check_family.visuallyhidden{:type => "checkbox", :name => "check_family", :value => "check_family", :tabindex => "-1"}
						%label{:for => "check_family"}
							Iâ€™m travelling with my family
							%svg.svg_ui-checkmark
								%use{"xlink:href" => "#ui_checkmark"}

				.wrap_columns.clearfix

					.column.col-2

						%label Who is going?

						.wrap_element
							%input#age-groups.age-groups{:type => "text", :name => "age-groups", :value => "", :placeholder => "Enter ages", :required => true, :tabindex => "-1"}
							%p e.g. 35, 25, 16

					.column.col-3

						%label Where are you from?

						#wrap_select-location.wrap_select{"data-selected" => ""}

							%select#select_location{:name => "select_location", :required => true, :tabindex => "-1"}
								%option{:disabled => true, :selected => true, :value => true} select an option
								%option{:value => "52"} Alberta
